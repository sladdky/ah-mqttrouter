{
	"name": "@sladdky/ah-mqttrouter",
	"version": "0.0.2",
	"description": "MQTT router for mqttjs/mqtt library.",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.(js|ts)\"",
		"lint": "eslint src --ext .js,.ts",
		"lint:fix": "eslint src --fix --ext .js,.ts",
		"test": "jest --config jest.config.js",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:sladdky/ah-mqttrouter.git"
	},
	"keywords": [
		"mqtt",
		"router"
	],
	"author": "Michal Sladk√Ω",
	"license": "MIT",
	"homepage": "https://github.com/sladdky/ah-mqttrouter#readme",
	"devDependencies": {
		"@types/jest": "29.2.4",
		"@typescript-eslint/eslint-plugin": "5.46.0",
		"@typescript-eslint/parser": "5.46.0",
		"app-root-path": "^3.1.0",
		"dotenv": "^16.0.3",
		"eslint": "8.29.0",
		"eslint-plugin-jest": "27.1.6",
		"jest": "29.3.1",
		"mqtt": "^4.3.7",
		"prettier": "2.8.1",
		"ts-jest": "29.0.3",
		"typescript": "4.9.4"
	},
	"files": [
		"lib/**/*"
	]
}
